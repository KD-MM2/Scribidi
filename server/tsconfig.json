{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    /* Paths */
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*",
      ]
    },
  },
  "include": [
    "src",
    "path.config.ts",
  ],
  // "exclude": [
  //   "node_modules",
  // ]
}